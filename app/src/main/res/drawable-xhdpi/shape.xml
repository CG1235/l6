<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0dp"
                android:color="@color/WhiteColorAlpha"/>
            <gradient
                android:angle="225"
                android:startColor="@color/WhiteColorAlpha"
                android:endColor="@color/WhiteColorAlpha"/>
            <corners
                android:bottomLeftRadius="35dp"
                android:bottomRightRadius="35dp"
                android:topLeftRadius="35dp"
                android:topRightRadius="35dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="2dp"
                android:color="@color/WhiteColor"/>
            <gradient
                android:angle="225"
                android:startColor="@color/WhiteColor"
                android:endColor="@color/WhiteColor"/>
            <corners
                android:bottomLeftRadius="35dp"
                android:bottomRightRadius="35dp"
                android:topLeftRadius="35dp"
                android:topRightRadius="35dp" />
        </shape>
    </item>
</selector>

